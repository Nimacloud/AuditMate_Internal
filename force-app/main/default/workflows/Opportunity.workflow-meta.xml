<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Opportunity_Cancelation_Alert</fullName>
        <description>Opportunity - Cancelation Alert</description>
        <protected>false</protected>
        <recipients>
            <field>Customer_Email__c</field>
            <type>email</type>
        </recipients>
        <senderAddress>support@auditmate.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Customer_Alerts/Vendor_Contract_Expiring</template>
    </alerts>
    <fieldUpdates>
        <fullName>Customer_Email_Update</fullName>
        <field>Customer_Email__c</field>
        <formula>Account.Customer_Contact__r.Email</formula>
        <name>Customer Email Update</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>CARE - Expiring Window Alerts</fullName>
        <actions>
            <name>Customer_Email_Update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Opportunity.Vendor_Contract_Stage__c</field>
            <operation>equals</operation>
            <value>Vendor_Contract_Active</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Opportunity_Cancelation_Alert</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Opportunity.cancelation_window_start_date__c</offsetFromField>
            <timeLength>-180</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>Opportunity_Cancelation_Alert</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Opportunity.cancelation_window_start_date__c</offsetFromField>
            <timeLength>-15</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>Opportunity_Cancelation_Alert</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Opportunity.cancelation_window_start_date__c</offsetFromField>
            <timeLength>-90</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
